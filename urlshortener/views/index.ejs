<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link rel="stylesheet" href="style.css" />
    </head>
    <body>
        <%- include("header") %>
        <div class="shortener-wrapper">
            <form method="post" class="shortener-form" action="/">
                <div class="form-group">
                    <label for="url">URL</label>
                    <input type="url" name="url" id="url" />
                </div>
                <div class="form-group">
                    <label for="shortCode">Short URL</label>
                    <input type="text" name="shortCode" id="shortCode" />
                </div>
                <div class="form-actions">
                    <button type="submit">Submit</button>
                </div>
            </form>

            <ul class="short-links-list">
                <% Object.entries(links).forEach(([shortCode, url]) => { %>
                <li>
                    <a href="/<%= shortCode %>" target="_blank"
                        ><%= host %>/<%= shortCode %></a
                    >
                    &rarr; <%= url %>
                </li>
                <% }) %>
            </ul>
        </div>
    </body>
</html>
